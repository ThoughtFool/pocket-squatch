                                <input type="text" name="createSprite" id="create-sprite"
                                    placeholder="Hero Name Here..." required><br>
                                <button id="enter-game-btn">enter game</button><br>
                            </div>

                        </div>
                        <div class="right-side-form">
                            <form id="myForm" name="myForm" autocomplete="on" method="POST" action="/enter-level">
                                <div>
                                    <label style="color:blanchedalmond" for="createSprite">Choose Level</label><br>
                                    <button id="enter-level-btn" class="btn" id="register-btn" type="submit">enter
                                        level</button><br>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

