<div class="enlist-wrapper">
    <!-- <h1>Enlist</h1> -->
    <div class="bg-modal">
        <div class="modal-content">
            <div class="divided-form">
                <div class="left-side-form">
                    <p>Join Us!</p>
                    <div class="badge-icon">
                        <img src="/images/lyric-sprite-up.png" alt="Avatar" class="avatar">
                    </div>
                </div>
                <div class="right-side-form">
                    <form id="myForm" name="myForm" autocomplete="on" method="POST" action="/login">
                        <div>
                            <label for="createSprite">Choose a name for your Hero:</label>
                            <input type="text" name="createSprite" id="createSprite" placeholder="Hero Name Here..."
                                required>
                        </div>
                        <div>
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" placeholder="example@email.com" required>
                        </div>
                        <div>
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" placeholder="password"
                                suggested="new-password" required>
                        </div>
                        <button class="btn" id="register-btn" type="submit">Submit</button>
                    </form>
                    <a class="btn" href="login">Login Page</a>
                </div>
            </div>
        </div>
    </div>
</div>